@model WEBASPNETMVCWCFSECIDEN.Models.UsuariosViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Usuario</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UsuId)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.UsuId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UsuId)
            </dd>
        </dl>
        <div class="form-group">
            @Html.LabelFor(m => m.UsuNombre, new { @class = "col-md-2 control-label" })


            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UsuNombre, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UsuPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UsuPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
